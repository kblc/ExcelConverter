<Window x:Class="ExelConverterLite.View.LoadImageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Загрузить изображение" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" >
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Путь" Margin="1" />
            <TextBox VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="url"  Margin="1" Width="100"/>
            <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Обзор"  Margin="1" Click="Button_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="OK" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2" Click="Button_Click_1" />
            <Button Content="Отмена" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="2" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
